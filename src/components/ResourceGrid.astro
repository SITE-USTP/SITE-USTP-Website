---
import type { CollectionEntry } from "astro:content";

interface Props {
  resources: CollectionEntry<"resources">[];
}

const { resources } = Astro.props;
---

<div class="pagination-wrapper w-full mt-8">
  <div
    class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-6 paginated-container"
    data-per-page="6"
  >
    {
      resources.map((resource) => (
        <div class="bg-surface-card rounded-lg shadow-sm border border-border-base overflow-hidden flex flex-col hover:shadow-md transition-shadow h-full paginated-item">
          <div class="h-24 sm:h-48 overflow-hidden bg-surface-muted flex-shrink-0">
            {resource.data.heroImage ? (
              <img
                src={resource.data.heroImage}
                alt={resource.data.title}
                class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center text-gray-400 bg-gray-100">
                <svg
                  class="w-12 h-12"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                  />
                </svg>
              </div>
            )}
          </div>
          <div class="p-3 sm:p-5 flex flex-col flex-1">
            <p class="text-xs font-medium text-primary mb-1">
              {resource.data.category}
            </p>
            <h4 class="text-sm sm:text-lg font-bold text-text-main mb-1 sm:mb-2 line-clamp-2 leading-tight min-h-[2.5em]">
              {resource.data.title}
            </h4>
            <p class="line-clamp-3 text-xs sm:text-sm text-text-muted mb-2 sm:mb-4 flex-grow-0">
              {resource.data.description}
            </p>
            <div class="mt-auto">
              <a
                href={`/resources/${(resource as any).slug || resource.id}`}
                class="text-xs sm:text-sm text-primary font-semibold hover:underline"
              >
                Read article &rarr;
              </a>
            </div>
          </div>
        </div>
      ))
    }
  </div>

  <div class="mt-8 flex justify-center pagination-controls hidden w-full">
    <nav
      class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px"
      aria-label="Pagination"
    >
      <button
        class="pagination-prev relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
      >
        <span class="sr-only">Previous</span>
        <svg
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"></path></svg
        >
      </button>
      <div class="pagination-numbers hidden md:flex"></div>
      <span
        class="pagination-mobile-text md:hidden relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700"
      >
        Page 1
      </span>
      <button
        class="pagination-next relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
      >
        <span class="sr-only">Next</span>
        <svg
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path></svg
        >
      </button>
    </nav>
  </div>
</div>

<script>
  function initPagination() {
    const wrappers = document.querySelectorAll(".pagination-wrapper");
    const searchInput = document.getElementById("search") as HTMLInputElement;

    wrappers.forEach((wrapper) => {
      const container = wrapper.querySelector(".paginated-container");
      if (!container) return;
      const allItems = Array.from(
        container.querySelectorAll(".paginated-item"),
      ) as HTMLElement[];

      const isMobile = window.innerWidth < 1024;
      const perPage = isMobile ? 6 : 9;
      let visibleItems = [...allItems];
      let totalPages = Math.ceil(visibleItems.length / perPage);
      let currentPage = 1;

      const controls = wrapper.querySelector(
        ".pagination-controls",
      ) as HTMLElement;

      const prevBtn = controls?.querySelector(
        ".pagination-prev",
      ) as HTMLButtonElement;
      const nextBtn = controls?.querySelector(
        ".pagination-next",
      ) as HTMLButtonElement;
      const numbersContainer = controls?.querySelector(".pagination-numbers");
      const mobileText = controls?.querySelector(".pagination-mobile-text");

      const render = () => {
        // First hide everything
        allItems.forEach((item) => (item.style.display = "none"));

        // Only show items for current page among visible items
        const start = (currentPage - 1) * perPage;
        const end = start + perPage;

        visibleItems.forEach((item, index) => {
          if (index >= start && index < end) {
            item.style.display = "";
          }
        });

        if (!controls) return;

        if (totalPages <= 1) {
          controls.style.display = "none";
        } else {
          controls.style.display = "";
          controls.classList.remove("hidden");
        }

        if (prevBtn) prevBtn.disabled = currentPage === 1;
        if (nextBtn)
          nextBtn.disabled = currentPage === totalPages || totalPages === 0;

        if (mobileText) {
          mobileText.textContent = `Page ${currentPage} of ${Math.max(1, totalPages)}`;
        }

        if (numbersContainer) {
          numbersContainer.innerHTML = "";
          for (let i = 1; i <= totalPages; i++) {
            const btn = document.createElement("button");
            btn.className = `relative inline-flex items-center px-4 py-2 border text-sm font-medium transition-colors ${
              i === currentPage
                ? "z-10 bg-blue-50 border-blue-500 text-blue-600"
                : "bg-white border-gray-300 text-gray-500 hover:bg-gray-50"
            }`;
            btn.textContent = i.toString();
            btn.addEventListener("click", () => {
              currentPage = i;
              render();
              window.scrollTo({
                top: (wrapper as HTMLElement).offsetTop - 100,
                behavior: "smooth",
              });
            });
            numbersContainer.appendChild(btn);
          }
        }
      };

      if (prevBtn) {
        prevBtn.addEventListener("click", () => {
          if (currentPage > 1) {
            currentPage--;
            render();
            window.scrollTo({
              top: (wrapper as HTMLElement).offsetTop - 100,
              behavior: "smooth",
            });
          }
        });
      }

      if (nextBtn) {
        nextBtn.addEventListener("click", () => {
          if (currentPage < totalPages) {
            currentPage++;
            render();
            window.scrollTo({
              top: (wrapper as HTMLElement).offsetTop - 100,
              behavior: "smooth",
            });
          }
        });
      }

      // Implement Search Logic
      if (searchInput) {
        searchInput.addEventListener("input", (e) => {
          const query = (e.target as HTMLInputElement).value.toLowerCase();

          visibleItems = allItems.filter((item) => {
            const textContent = item.textContent?.toLowerCase() || "";
            return textContent.includes(query);
          });

          totalPages = Math.ceil(visibleItems.length / perPage);
          currentPage = 1;
          render();
        });
      }

      render();
    });
  }

  document.addEventListener("DOMContentLoaded", () => {
    initPagination();
  });
</script>
