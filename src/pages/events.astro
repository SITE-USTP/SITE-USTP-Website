---
import MainLayout from "../layouts/MainLayout.astro";
import EventCalendar from "../components/EventCalendar.astro";
import { getCollection } from "astro:content";

const events = await getCollection("events");
events.sort(
    (a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf(),
);

const formatDateNumber = (date: Date | string) => {
    return new Date(date).getDate().toString();
};

const formatMonthName = (date: Date | string) => {
    return new Date(date).toLocaleString("default", { month: "short" });
};

---

<MainLayout title="Events | SITE">
    <div class="bg-white py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                    Upcoming Events
                </h1>
                <p class="mt-4 text-xl text-gray-500">
                    Join us for workshops, hackathons, and community gatherings.
                </p>
            </div>

            <!-- Event Calendar Embed -->
            <EventCalendar />

            <!-- Featured Upcoming Events List -->
            <div class="grid grid-cols-2 md:grid-cols-1 gap-3 sm:gap-8">
                {
                    events.map((event, index) => (
                        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden flex flex-col md:flex-row hover:shadow-md transition-shadow h-full md:h-auto">
                            <div
                                class={`md:w-1/4 lg:w-1/4 flex items-center justify-center p-3 sm:p-6 md:p-8 text-white shrink-0 md:shrink ${index % 2 === 0 ? "bg-blue-600" : "bg-gray-800"}`}
                            >
                                <div class="text-center">
                                    {
                                        event.data.endDate &&
                                        new Date(event.data.date).toDateString() !==
                                            new Date(event.data.endDate).toDateString() ? (
                                            <div class="flex flex-col items-center">
                                                <div class="flex items-center gap-1.5 sm:gap-3 mb-0.5 md:mb-1">
                                                    <span class="text-2xl sm:text-4xl font-bold">
                                                        {formatDateNumber(event.data.date)}
                                                    </span>
                                                    <span class="text-base sm:text-2xl font-light opacity-60">
                                                        &ndash;
                                                    </span>
                                                    <span class="text-2xl sm:text-4xl font-bold">
                                                        {formatDateNumber(event.data.endDate)}
                                                    </span>
                                                </div>
                                                <span class="text-sm sm:text-xl uppercase tracking-wider md:tracking-widest font-medium opacity-90 text-center">
                                                    <span class="block md:inline whitespace-nowrap">
                                                        {formatMonthName(event.data.date)}
                                                        {new Date(event.data.date).getMonth() !== new Date(event.data.endDate).getMonth() && ` - ${formatMonthName(event.data.endDate)}`}
                                                    </span>
                                                </span>
                                            </div>
                                        ) : (
                                            <>
                                                <span class="block text-3xl md:text-4xl font-bold mb-1 md:mb-0">
                                                    {formatDateNumber(event.data.date)}
                                                </span>
                                                <span class="block text-sm md:text-xl uppercase tracking-wide">
                                                    {formatMonthName(event.data.date)}
                                                </span>
                                            </>
                                        )
                                    }
                                </div>
                            </div>
                            <div class="p-3 sm:p-6 flex-1 flex flex-col justify-center">
                                <h2 class="text-sm sm:text-xl md:text-2xl font-bold text-gray-900 mb-1 sm:mb-2 line-clamp-2 md:line-clamp-none">
                                    <a
                                        href={`/events/${event.id}/`}
                                        class="hover:text-blue-600 transition-colors"
                                    >
                                        {event.data.title}
                                    </a>
                                </h2>
                                <div class="hidden sm:flex items-center text-xs md:text-sm text-gray-500 mb-4 w-full">
                                    <svg
                                        class="h-4 w-4 mr-1 shrink-0"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                    <span class="truncate">
                                        {event.data.time || "Time TBA"}
                                    </span>
                                    <span class="mx-2 shrink-0">â€¢</span>
                                    <svg
                                        class="h-4 w-4 mr-1 shrink-0"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                    <span class="truncate">
                                        {event.data.location}
                                    </span>
                                </div>
                                <div class="mt-auto md:mt-0 pt-2 md:pt-0">
                                    <a
                                        href={`/events/${event.id}/`}
                                        class="inline-flex items-center text-xs sm:text-sm md:text-base text-blue-600 font-semibold hover:underline mt-1"
                                    >
                                        More info &rarr;
                                    </a>
                                </div>
                            </div>
                            
                            <!-- Poster Column -->
                            <div class="hidden md:flex bg-gray-50 border-l border-gray-100 items-center justify-center p-6 shrink-0">
                                {event.data.heroImage ? (
                                    <img 
                                        src={event.data.heroImage} 
                                        alt={event.data.title} 
                                        class="w-28 h-28 object-cover rounded-xl shadow-sm"
                                    />
                                ) : (
                                    <div class="w-28 h-28 bg-gray-100 border-2 border-dashed border-gray-200 rounded-xl flex flex-col items-center justify-center text-gray-400">
                                        <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                                        <span class="text-[10px] font-semibold uppercase tracking-wider">Poster</span>
                                    </div>
                                )}
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</MainLayout>
