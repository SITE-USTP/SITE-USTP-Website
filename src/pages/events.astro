---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Events | SITE">
    <div class="bg-white py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                    Upcoming Events
                </h1>
                <p class="mt-4 text-xl text-gray-500">
                    Join us for workshops, hackathons, and community gatherings.
                </p>
            </div>

            <!-- Event Calendar Embed (Google Calendar Placeholder) -->
            <div
                class="bg-gray-50 rounded-xl shadow p-4 border border-gray-200 mb-12"
            >
                <div
                    class="aspect-w-16 aspect-h-9 flex items-center justify-center h-96"
                >
                    <p class="text-gray-500">
                        Google Calendar Embed will go here.
                    </p>
                </div>
            </div>

            <!-- Featured Upcoming Events List -->
            <div class="space-y-8">
                <div
                    class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden flex flex-col md:flex-row hover:shadow-md transition-shadow"
                >
                    <div
                        class="md:w-1/3 bg-blue-600 flex items-center justify-center p-8 text-white"
                    >
                        <div class="text-center">
                            <span class="block text-4xl font-bold">25</span>
                            <span class="block text-xl uppercase tracking-wide"
                                >Feb</span
                            >
                        </div>
                    </div>
                    <div class="p-6 md:w-2/3">
                        <div
                            class="flex items-center text-sm text-gray-500 mb-2"
                        >
                            <svg
                                class="h-4 w-4 mr-1"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                                ><path
                                    fill-rule="evenodd"
                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                                    clip-rule="evenodd"></path></svg
                            >
                            1:00 PM - 5:00 PM
                            <span class="mx-2">•</span>
                            <svg
                                class="h-4 w-4 mr-1"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                                ><path
                                    fill-rule="evenodd"
                                    d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                    clip-rule="evenodd"></path></svg
                            >
                            University Auditorium
                        </div>
                        <h2 class="text-2xl font-bold text-gray-900 mb-2">
                            General Assembly & Welcome Party
                        </h2>
                        <p class="text-gray-600 mb-4">
                            Kick off the semester with SITE! Meet the new
                            officers, learn about upcoming projects, and enjoy
                            some refreshments.
                        </p>
                        <a
                            href="#"
                            class="inline-flex items-center text-blue-600 font-semibold hover:underline"
                        >
                            Register Now &rarr;
                        </a>
                    </div>
                </div>

                <div
                    class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden flex flex-col md:flex-row hover:shadow-md transition-shadow"
                >
                    <div
                        class="md:w-1/3 bg-gray-200 flex items-center justify-center p-8 text-gray-500"
                    >
                        <div class="text-center">
                            <span class="block text-4xl font-bold">10</span>
                            <span class="block text-xl uppercase tracking-wide"
                                >Mar</span
                            >
                        </div>
                    </div>
                    <div class="p-6 md:w-2/3">
                        <div
                            class="flex items-center text-sm text-gray-500 mb-2"
                        >
                            <svg
                                class="h-4 w-4 mr-1"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                                ><path
                                    fill-rule="evenodd"
                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                                    clip-rule="evenodd"></path></svg
                            >
                            9:00 AM - 12:00 PM
                            <span class="mx-2">•</span>
                            <svg
                                class="h-4 w-4 mr-1"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                                ><path
                                    fill-rule="evenodd"
                                    d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                    clip-rule="evenodd"></path></svg
                            >
                            Computer Lab 3
                        </div>
                        <h2 class="text-2xl font-bold text-gray-900 mb-2">
                            Intro to Git & GitHub Workshop
                        </h2>
                        <p class="text-gray-600 mb-4">
                            Learn the basics of version control and how to
                            collaborate on projects using GitHub. Essential for
                            all IT students!
                        </p>
                        <a
                            href="#"
                            class="inline-flex items-center text-blue-600 font-semibold hover:underline"
                        >
                            Register Now &rarr;
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</MainLayout>
